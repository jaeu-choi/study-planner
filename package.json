{
  "name": "study-planner",
  "main": "main.js",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
        "electron-dev": "concurrently -k \"npm run dev\" \"wait-on tcp:5173 && NODE_ENV=development electron .\"",
    "dist": "vite build && electron-builder",
    "dist-win": "vite build && electron-builder --win",
    "dist-mac": "vite build && electron-builder --mac",
    "dist-linux": "vite build && electron-builder --linux"
  },
  "dependencies": {
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "vite": "^7.0.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.studyplanner.app",
    "productName": "Study Planner",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Education",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
